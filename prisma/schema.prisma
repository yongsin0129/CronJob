generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model courses {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  v           Int      @map("__v")
  description String
  instructor  String   @db.ObjectId
  price       Int
  student     String[]
  title       String
}

model users {
  id       String   @id @default(auto()) @map("_id") @db.ObjectId
  v        Int      @map("__v")
  date     DateTime @db.Date
  email    String
  password String
  role     String
  username String
}
